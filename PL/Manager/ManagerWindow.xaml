        <Button Content="Tasks" HorizontalAlignment="Left" VerticalAlignment="Top" Height="43" Width="129" Click="btnHandleTasks" Margin="454,217,0,0">
            <!-- Button style definition -->
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <!-- Default button appearance -->
                    <Setter Property="Background" Value="#f1f1f2"/>
                    <Setter Property="BorderBrush" Value="#6464f8"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Padding" Value="4"/>
